<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:weightSum="1" >

    <WebView
        android:id="@+id/webView"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_weight="0.3"
        android:orientation="horizontal" >

        <ImageButton
            android:id="@+id/leftUpperCornerIB"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/arrow_up_left_corner_4" />

        <ImageButton
            android:id="@+id/upIB"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/arrow_up_4" />

        <ImageButton
            android:id="@+id/rightUpperCornerIB"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/arrow_up_right_corner_4" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_weight="0.02"
        android:orientation="horizontal" >

        <ImageButton
            android:id="@+id/leftIB"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/arrow_left_4" />

        <ImageButton
            android:id="@+id/centerIB"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/center" />

        <ImageButton
            android:id="@+id/rightIB"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/arrow_right_4" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_weight="0.02"
        android:orientation="horizontal" >

        <ImageButton
            android:id="@+id/leftBottomCornerIB"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/arrow_left_bottom_4" />

        <ImageButton
            android:id="@+id/downIB"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/arrow_down_4" />

        <ImageButton
            android:id="@+id/rightBottomCornerIB"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/arrow_right_bottom_4" />
    </LinearLayout>

    <TextView
        android:id="@+id/lastDirectionTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:layout_weight="0.05"
        android:textColor="@android:color/black" />

</LinearLayout>